public class Contatinho {
    private String nome;
    private String email;
    private String telefone;
    private String categoria;

    public Contatinho(String nome, String email, String telefone, String categoria) {
        this.nome = nome;
        this.email = email;
        this.telefone = telefone;
        this.categoria = categoria;
    }

    public String getNome() {
        return nome;
    }

    @Override
    public String toString() {
        // formato definido pelo enunciado: nome#email#telefone#categoria
        return nome + "#" + email + "#" + telefone + "#" + categoria;
    }
}
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;

public class Agenda {

    private List<Contatinho> lista = new ArrayList<>();

    // Adiciona um novo contatinho Ã  lista
    public void addContatinho(Contatinho c) {
        lista.add(c);
    }

    // Ordena a lista alfabeticamente pelo nome do contatinho
    public void ordenarLista() {
        Collections.sort(lista, Comparator.comparing(Contatinho::getNome));
    }

    // Salva a lista ordenada em um arquivo de texto
    public void salvarLista(String nomeArquivo) {
        ordenarLista(); // garante que vai salvar ordenado

        try {
            FileWriter fw = new FileWriter(nomeArquivo);

            for (Contatinho c : lista) {
                fw.write(c.toString() + "\n");
            }

            fw.close();
            System.out.println("Lista salva no arquivo: " + nomeArquivo);

        } catch (IOException e) {
            System.out.println("Erro ao salvar arquivo.");
        }
    }
}
