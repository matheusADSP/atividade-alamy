import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public Contatinho procurarContatinho(String nomeProcurado, String nomeArquivo) {

    File arquivo = new File(nomeArquivo);

    // Se o arquivo não existir, retorna null
    if (!arquivo.exists()) {
        System.out.println("Arquivo " + nomeArquivo + " não existe.");
        return null;
    }

    try {
        Scanner leitor = new Scanner(arquivo);

        while (leitor.hasNextLine()) {
            String linha = leitor.nextLine();

            // formato: nome#email#telefone#categoria
            String[] partes = linha.split("#");

            String nome = partes[0];

            if (nome.equalsIgnoreCase(nomeProcurado)) {
                // cria e retorna o objeto contatinho encontrado
                String email = partes[1];
                String telefone = partes[2];
                String categoria = partes[3];

                leitor.close();
                return new Contatinho(nome, email, telefone, categoria);
            }
        }

        leitor.close();

    } catch (FileNotFoundException e) {
        System.out.println("Erro ao abrir o arquivo.");
    }

    // se não encontrar
    return null;
}
